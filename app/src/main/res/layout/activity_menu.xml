<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.julianalouback.supnyc.MenuActivity"
    android:layout_gravity="top"
    android:background="@drawable/background">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="3">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:src="@drawable/logo" />
    </LinearLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="520dp"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="10dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/party_button"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@drawable/party_button"
                android:background="@null"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/culture_button"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_column="1"
                android:layout_row="0"
                android:src="@drawable/culture_button"
                android:background="@null"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/bars_button"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/bars_button"
                android:background="@null"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/dining_button"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_column="1"
                android:layout_row="1"
                android:src="@drawable/dining_button"
                android:background="@null"
                android:scaleType="fitCenter"/>
        </GridLayout>

    </FrameLayout>

</FrameLayout>
